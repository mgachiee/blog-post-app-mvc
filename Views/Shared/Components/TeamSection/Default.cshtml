@model IEnumerable<(string Name, string Role, string ImageUrl)>

<div class="container my-5">
    <h2 class="text-center mb-5">Meet the Team</h2>
    <div class="row g-4">
        @foreach (var member in Model)
        {
            <div class="col-md-3">
                <div class="card border-0 shadow-sm text-center">
                    <div class="card-body">
                        <img src="@member.ImageUrl" alt="@member.Name's Photo" class="rounded-circle mb-3"
                            style="width:80px; height:80px; object-fit:cover;">
                        <h5 class="card-title mb-1">@member.Name</h5>
                        <p class="card-text text-muted small">@member.Role</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>