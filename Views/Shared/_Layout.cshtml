<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Assessment 8</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @* <link rel="stylesheet" href="~/Assessment_8.styles.css" asp-append-version="true" /> *@
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Blog" asp-action="Index">Blog Post App - MVC</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Blog" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="About" asp-action="Index">About</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container flex-grow-1">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-light border-top mt-auto py-4">
        <div class="container">
            <div class="row">
            <!-- Brand/Description -->
            <div class="col-md-4 mb-3">
                <h5 class="text-dark">Blog Post App - MVC</h5>
                <p class="text-muted small">Explore insightful blog posts on technology and development. Built with ASP.NET Core MVC.</p>
            </div>

            <!-- Quick Links -->
            <div class="col-md-4 mb-3">
                <h6 class="text-dark">Quick Links</h6>
                <ul class="list-unstyled">
                <li><a asp-controller="Blog" asp-action="Index" class="text-muted text-decoration-none">Home</a></li>
                <li><a asp-controller="About" asp-action="Index" class="text-muted text-decoration-none">About</a></li>
                </ul>
            </div>

            <!-- Social/Contact -->
            <div class="col-md-4 mb-3">
                <h6 class="text-dark">Connect</h6>
                <div class="d-flex">
                <a href="#" class="text-muted me-3"><i class="bi bi-facebook"></i></a>
                <a href="#" class="text-muted me-3"><i class="bi bi-twitter"></i></a>
                <a href="#" class="text-muted me-3"><i class="bi bi-github"></i></a>
                <a href="#" class="text-muted"><i class="bi bi-envelope"></i></a>
                </div>
                <p class="text-muted small mt-2">Contact us at info@blogapp.com</p>
            </div>
            </div>

            <!-- Copyright -->
            <hr class="my-3">
            <div class="text-center text-muted small">
            &copy; 2025 - Assessment 8 - Bobadilla | Degulacion | Gutierrez | Logdat
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
